packages:
  yum:
    awslogs: []

files:
  "/etc/awslogs/config/auto-app.conf" :
    mode: "000600"
    owner: root
    group: root
    content: |
      [/var/app/current/auto-app.log]
      log_group_name = `{"Fn::Join":["/", ["/aws/elasticbeanstalk", { "Ref":"auto-app-tomcat" }, "var/app/current/auto-app.log"]]}`
      log_stream_name = {instance_id}
      file = /var/app/current/auto-app.log*

commands:
  "01":
    command: systemctl enable awslogsd.service
  "02":
    command: systemctl restart awslogsd